<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckg1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sombright.vizix.simultanea.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/playerNameField"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/profileNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_alignParentTop="true"
            tools:text="PlayerPlayerPlayerPla"
            android:background="#80000000"
            />

        <!--<View-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:alpha=".55"-->
            <!--android:background="#000000" />-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playerAvatarField"
        android:layout_below="@id/playerNameField">

        <ImageView
            android:id="@+id/profileCharacterImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/bluepanda"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profileAvatarCharacterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Character Name: Pandgeal"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:background="#CCFFFFFF"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"/>

            <TextView
                android:id="@+id/profileAvatarCharacterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title: The Divine Panda Mage"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:background="#CCFFFFFF"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/profileAvatarCharacterHealthStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health: 100"
                    android:textSize="16sp"
                    android:layout_marginRight="5dp"
                    android:textColor="@android:color/black"
                    android:background="#CCFFFFFF"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"/>

                <TextView
                    android:id="@+id/profileAvatarCharacterRecoveryStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recovery: 5"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/black"
                    android:background="#CCFFFFFF"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/profileAvatarCharacterAttackStat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attack: 30"
                android:textSize="16sp"
                android:layout_marginRight="5dp"
                android:textColor="@android:color/black"
                android:background="#CCFFFFFF"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"/>

            <TextView
                android:id="@+id/profileAvatarCharacterDefenseStat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Defense: 10"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/black"
                android:background="#CCFFFFFF"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"/>

        </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



    <TextView
        android:id="@+id/profileHighScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playerAvatarField"
        android:text="High Score: "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:background="#CCFFFFFF"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"/>

    <TextView
        android:id="@+id/profileGamesCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileHighScoreText"
        android:text="Games Completed: 10"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:background="#CCFFFFFF"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"/>

    <TextView
        android:id="@+id/profileGamesWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileGamesCompleted"
        android:text="Games Won: 7"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:background="#CCFFFFFF"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"/>

    <TextView
        android:id="@+id/profileGamesLost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileGamesWon"
        android:text="Games Lost: 3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:background="#CCFFFFFF"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"/>

    <TextView
        android:id="@+id/profileFrequentCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileGamesLost"
        android:text="Frequently Picked Character: Angelic Panda"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:background="#CCFFFFFF"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"/>

</RelativeLayout>
